{
  "name": "instance",
  "scripts": {
    "analyse": "npm run lint && npm run test",
    "clean": "rimraf .build .serverless .nyc_output coverage",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prebuild": "graphql prepare && npm run clean && npm run analyse",
    "prepare": "graphql prepare",
    "build": "serverless package",
    "playground": "graphql playground --project 'Bastion LMS' --port 3001",
    "predeploy": "graphql prepare && npm run clean && npm run analyse",
    "deploy": "serverless deploy",
    "lint": "tslint --project . --format verbose",
    "start": "graphql prepare && serverless offline start",
    "pretest": "npm run clean",
    "test": "nyc mocha",
    "test:integration": "mocha --opts ./test/integration/mocha.opts"
  },
  "dependencies": {
    "dynamoose": "^0.8.7",
    "graphql": "^0.13.2",
    "graphql-binding": "^1.3.0",
    "graphql-import": "^0.5.0",
    "graphql-tools": "^2.24.0",
    "graphql-yoga": "^1.8.5",
    "joi": "^13.2.0",
    "lodash": "^4.17.5",
    "moment": "^2.22.1",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^0.0.31",
    "@types/chai": "^4.1.3",
    "@types/chance": "^1.0.0",
    "@types/graphql": "^0.13.0",
    "@types/joi": "^13.0.7",
    "@types/lodash": "^4.14.107",
    "@types/mocha": "^5.2.0",
    "@types/node": "^8.x",
    "@types/request": "^2.47.0",
    "@types/request-promise-native": "^1.0.14",
    "@types/uuid": "^3.4.3",
    "aws-sdk": "^2.226.1",
    "chai": "^4.1.2",
    "chance": "^1.0.13",
    "coveralls": "^3.0.0",
    "graphql-cli": "^2.15.9",
    "mocha": "^5.1.1",
    "nyc": "^11.7.1",
    "request-promise-native": "^1.0.5",
    "rimraf": "^2.6.2",
    "serverless-offline": "^3.20.3",
    "serverless-plugin-typescript": "^1.1.5",
    "serverless-stack-output": "^0.2.3",
    "source-map-support": "^0.5.4",
    "ts-loader": "^3.x",
    "ts-mockito": "^2.3.0",
    "ts-node": "^4.x",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.8.3"
  }
